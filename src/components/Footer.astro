---
import { BookIcon } from "lucide-react";
import { company, description } from "../mainInfo.ts";
---

<footer class="bg-muted py-8 md:py-12">
  <div
    class="container mx-auto grid max-w-4xl grid-cols-1 gap-8 px-4 sm:grid-cols-2 md:grid-cols-4 md:px-6"
  >
    <div class="flex flex-col items-start gap-4">
      <a href="#" class="flex items-center gap-2">
        <BookIcon />
        <span class="text-lg font-bold">{company}</span>
      </a>
      <p class="text-sm text-muted-foreground">
        {description}
      </p>
    </div>
    <div class="grid gap-2">
      <h4 class="font-semibold">Product</h4>
      <a href="#" class="text-sm hover:underline"> Features </a>
      <a href="#" class="text-sm hover:underline"> Pricing </a>
      <a href="#" class="text-sm hover:underline"> Integrations </a>
    </div>
    <div class="grid gap-2">
      <h4 class="font-semibold">Company</h4>
      <a href="#" class="text-sm hover:underline"> About </a>
      <a href="#" class="text-sm hover:underline"> Blog </a>
      <a href="#" class="text-sm hover:underline"> Careers </a>
    </div>
    <div class="grid gap-2">
      <h4 class="font-semibold">Support</h4>
      <a href="#" class="text-sm hover:underline"> Help Center </a>
      <a href="#" class="text-sm hover:underline"> Contact Us </a>
      <a href="#" class="text-sm hover:underline"> Documentation </a>
    </div>
  </div>
  <div
    class="container mx-auto mt-8 flex max-w-7xl items-center justify-between px-4 md:px-6"
  >
    <p class="text-xs text-muted-foreground">
      &copy; 2024 {company} All rights reserved.
    </p>
    <nav class="flex items-center gap-4">
      <a href="#" class="text-xs hover:underline"> Terms of Service </a>
      <a href="#" class="text-xs hover:underline"> Privacy Policy </a>
    </nav>
  </div>
</footer>
